<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
<parameters>
    <parameter key="commercetools.cache.states" type="string">false</parameter>
</parameters>
<services>
    <defaults autowire="true" autoconfigure="true" public="false" />
    <prototype namespace="Commercetools\Symfony\StateBundle\Command\" resource="../../Command/*" />

    <service id="Commercetools\Symfony\StateBundle\Model\Repository\StateRepository"
             parent="Commercetools\Symfony\CtpBundle\Model\Repository" autowire="true" public="false" autoconfigure="false">
        <argument key="$enableCache">%commercetools.cache.states%</argument>
        <argument key="$logger" type="service" id="commercetools.logger" />
    </service>
    <service id="ctp.marking_store" class="Commercetools\Symfony\StateBundle\Model\CtpMarkingStore">
        <argument key="$stateRepository" type="service" id="Commercetools\Symfony\StateBundle\Model\Repository\StateRepository"/>
        <argument key="$cache" type="service" id="cache.app" />
    </service>

    <prototype namespace="Commercetools\Symfony\StateBundle\Model\" resource="../../Model/CtpMarkingStore*State.php" />

</services>
</container>

